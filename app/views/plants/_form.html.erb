<%= form_with(model: plant) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :planted_at %>
    <%= form.datetime_select :planted_at %>
  </div>

  <div class="field">
    <%= form.label :harvest_at %>
    <%= form.datetime_select :harvest_at %>
  </div>

  <div class="field">
    <%= form.label :garden_bed_id %>
    <%= form.select(:garden_bed_id, GardenBed.all.map {|garden_bed| [ garden_bed.name, garden_bed.id ] }, { include_blank: false }) %>
  </div>

  <div class="field">
    <%= form.label :species_id %>
    <%= form.select(:species_id, Species.all.map {|species| [ species.name, species.id ] }, { include_blank: false }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
