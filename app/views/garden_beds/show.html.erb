<p id="notice"><%= notice %></p>

<h1>
  <%= @garden_bed.name %>
</h1>

<p>
  <%= @garden_bed.species_list %>
</p>

<p>
  <strong>Last weeded at:</strong>
  <%= @garden_bed.last_weeded_at %>
</p>

<%= link_to 'Edit', edit_garden_bed_path(@garden_bed) %> |
<%= link_to 'Back', garden_beds_path %>
<%= button_to 'Propagate Weeds', garden_bed_propagate_weeds_path(@garden_bed), method: :get %>


<h2><%= @garden_bed.plants.count %> Plants</h2>

<ul>
  <% @garden_bed.plants.each do |plant| %>
    <li>
      <%= link_to plant.name, plant %>
      <%= button_to "Weed", plant_weed_path(plant) %>
    </li>
  <% end %>
</ul>